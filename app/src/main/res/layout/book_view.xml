<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_service"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainForm"
    >
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:layout_margin="10dp"
        android:padding="16dp"
        >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_columnSpan="3"
            android:layout_marginBottom="5dp"
            android:text="Harry Potter and The Sorcerer Stone"
            android:textColor="#000000"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:text="Author :  "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:text="J.K.Rowling"
            android:textColor="#00BCD4"
            android:layout_columnSpan="2"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="165dp"
            android:layout_height="259dp"
            app:srcCompat="@drawable/harry_potter"
            android:layout_marginRight="15sp"
            />

        <TextView
            android:id="@+id/tv_synopsis"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:text="Synopsis :
            An orphaned boy enrolls in a school of wizardry,
            where he learns the truth about himself, his family and the
            terrible evil that haunts the magical world."
            android:layout_columnSpan="2"
            android:textSize="20sp" />
    </GridLayout>


</androidx.cardview.widget.CardView>